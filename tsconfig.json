{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "lib": [
            "dom",
            "es6",
            "scripthost",
            "es2019"
        ],
        "types": ["node", "svelte"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": ["node_modules/*"]
}
